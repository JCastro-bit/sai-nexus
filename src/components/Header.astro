---
import Button from './Button.astro';
---

<header class="absolute top-0 left-0 right-0 z-50 bg-white/90 backdrop-blur-sm">
  <nav class="flex items-center justify-between px-6 py-4 max-w-7xl mx-auto">
    <div class="flex items-center">
      <div class="w-8 h-8 bg-red-600 rounded flex items-center justify-center mr-2">
        <span class="text-white font-bold text-lg">SN</span>
      </div>
    </div>
    
    <div class="hidden md:flex items-center space-x-8">
      <a href="#about" class="text-gray-700 hover:text-red-600 transition-colors">About</a>
      <a href="#services" class="text-gray-700 hover:text-red-600 transition-colors">Services</a>
      <a href="#track" class="text-gray-700 hover:text-red-600 transition-colors">Track</a>
      <a href="#faq" class="text-gray-700 hover:text-red-600 transition-colors">FAQ</a>
    </div>
    
    <div class="flex items-center space-x-4">
      <Button>Contact Us</Button>
      <button class="bg-black text-white p-2 rounded-full hover:bg-red-600 transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      </button>
    </div>
  </nav>
</header>